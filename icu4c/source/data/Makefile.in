## Source directory information
srcdir = @srcdir@
top_srcdir = @top_srcdir@

# So that you have $(top_builddir)/config.status
top_builddir = ..

## All the flags and other definitions are included here.
include $(top_builddir)/icudefs.mk

## Build directory information
# So that  $(top_builddir)/$(subdir) ~= "here"
subdir = data

## Default target
all: all-local

## Include the main build rules
include $(top_builddir)/$(subdir)/rules.mk

## List of standard targets
all-local: $(TMP_DIR)/$(ICUDATA_NAME).dat
install: all
	echo "Error: install not supported yet"
clean:
	rm -rf $(OUT_DIR)
	rm -rf $(TMP_DIR)
distclean: clean
	rm -f Makefile
	rm -f pkgdataMakefile
	rm -f rules.mk
dist:
	echo "Error: dist not supported yet"
check: all check-python-compat
check-exhaustive: check

check-python-compat:
	# Script should work in both Python 2 and Python 3
	python2 -m buildtool --format gnumake 1> /dev/null
	python3 -m buildtool --format gnumake 1> /dev/null
